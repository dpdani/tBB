{
  "networkIp": "192.168.2.0/23-2",
  "logging": {
    "version": 1,
    "disable_existing_loggers": false,

    "formatters": {
      "complete": {
        "format": "%(levelname)s|%(name)s@%(asctime)s: %(message)s",
        "datefmt": "{default_time_format}"
      },
      "brief": {
        "format": "%(asctime)s: %(message)s",
        "datefmt": "{default_time_format}"
      },
      "syslog": {
        "format": "%(levelname)s|%(name)s: %(message)s"
      }
    },
    "handlers": {
      "console": {
        "level": "INFO",
        "class": "logging.StreamHandler",
        "formatter": "brief"
      },
      "syslog": {
        "level": "DEBUG",
        "class": "logging.handlers.SysLogHandler",
        "formatter": "syslog",
        "address": {"ip": "localhost", "port": 1985},
        "socktype": "ext://socket.SOCK_DGRAM",
        "facility": "ext://logging.handlers.SysLogHandler.LOG_DAEMON"
      },
      "file": {
        "level": "DEBUG",
        "class": "logging.handlers.RotatingFileHandler",
        "formatter": "complete",
        "maxBytes": 10000000,
        "backupCount": 4,
        "filename": "tBB.log"
      }
    },
    "loggers": {
      "": {
        "handlers": ["console", "file", "syslog"],
        "level": "INFO",
        "propagate": true
      }
    }
  },
  "tracker": {
    "discoveries": [
      {"type": "icmp", "count": 3, "timeout": 2, "flood": false, "enabled": true},
      {"type": "syn", "ports": "22", "timeout": 2, "enabled": true}
    ],
    "hosts": 16,
    "arp": {"count": 3, "timeout": 2, "quit_on_first": true},
    "enable_notifiers": true,
    "time_between_checks": {"minutes": 0, "seconds": 8},
    "maximum_seconds_randomly_added": 4
  }
}
